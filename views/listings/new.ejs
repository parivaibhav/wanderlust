<% layout("/layouts/boillerplate.ejs") %>
  <div class="container py-5">
    <div class="row justify-content-center">
      <div class="col-lg-7 col-md-9">
        <div class="card shadow-lg border-0">
          <div class="card-body p-5">
            <h2 class="mb-4 text-center fw-bold text-primary">Create a New Listing</h2>
            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
              <div class="mb-4">
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" id="title" placeholder="Enter catchy title" type="text"
                  class="form-control form-control-lg" required />
                <div class="valid-feedback">Title looks good!</div>
                <div class="invalid-feedback">Please enter a valid title.</div>
              </div>

              <div class="mb-4">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" id="description" placeholder="Enter description"
                  class="form-control form-control-lg" rows="3" required></textarea>
                <div class="invalid-feedback">Please enter a valid description.</div>
              </div>

              <div class="mb-4">
                <label for="image" class="form-label">Upload Image</label>
                <input name="listing[image]" id="image" type="file" class="form-control form-control-lg"
                  accept="image/*" required />
                <div class="invalid-feedback">Please upload an image file.</div>
              </div>

              <div class="row">
                <div class="mb-4 col-md-4">
                  <label for="price" class="form-label">Price</label>
                  <div class="input-group">
                    <span class="input-group-text">â‚¹</span>
                    <input name="listing[price]" id="price" placeholder="ex. 1200" type="number" min="1"
                      class="form-control form-control-lg" required />
                  </div>
                  <div class="invalid-feedback">Please enter a valid price.</div>
                </div>

                <div class="mb-4 col-md-8">
                  <label for="country" class="form-label">Country</label>
                  <input name="listing[country]" id="country" placeholder="ex. India" type="text"
                    class="form-control form-control-lg" required />
                  <div class="invalid-feedback">Please enter a valid country.</div>
                </div>
              </div>

              <div class="mb-4">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" id="location" placeholder="ex. Jaipur, Rajasthan" type="text"
                  class="form-control form-control-lg" required />
                <div class="invalid-feedback">Please enter a valid location.</div>
              </div>
              <div class="d-grid">
                <button class="btn btn-primary btn-lg add-btn">Add Listing</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="/js/script.js"></script>