<% layout("/layouts/boillerplate.ejs") %>



  <body>
    <div class="row mt-3">
      <div class="col-8 offset-2">
        <h3>
          <%= listing.title %>
        </h3>
      </div>
      <div class="card col-6 offset-3 show-card listing-card">
        <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
        <div class="card-body">
          <p class="card-text">
            <br>

            <%= listing.description %> <br>

              &#8377; <%= listing.price.toLocaleString("en-IN") %>
                <br>
                <%= listing.location %> <br>
                  <%= listing.country %>
          </p>
        </div>
      </div>
      <br>
      <div class="btns mb-3">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark col-1 offset-3">Edit </a>
        <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE">
          <button class="btn btn-danger offset-5">Delete</button>
        </form>
      </div>
    </div>
    <div class="col-8 offset-3 my-4">
      <hr>
      <h4>Leave a Review</h4>
      <form action="/listings/<%= listing._id %>/reviews" method="post" novalidate class="needs-validation">
        <div class="mb-3 mt-3">
          <label for="rating" class="form-label">Rating</label>
          <input type="range" id="rating" name="review[rating]" min="1" max="5" class="form-range" />
          <div class="d-flex justify-content-between">
            <span>1</span>
            <span>2</span>
            <span>3</span>
            <span>4</span>
            <span>5</span>
          </div>
          <div class="invalid-feedback">
            Please provide a valid rating.
          </div>
          <div class="mb-3 mt-3">
            <label for="comment" class="form-label">Comments</label>
            <textarea class="form-control" id="comment" name="review[comment]" rows="3" required></textarea>
            <div class="invalid-feedback">
              Please provide a valid comment.
            </div>
          </div>
          <button type="submit" class="btn btn-outline-dark">Submit </button>
      </form>
      <hr>
      <p><b>All Reviews</b></p>
      <div class="row gap-2">
        <% for( review of listing.reviews) { %>
          <div class="card col-4  ">
            <div class="card-body">
              <h5 class="card-title">John Doe</h5>
              <p class="card-text">Rating: <%= review.rating %>
              </p>
              <p class="card-text">Comment: <%= review.comment %>
              </p>
              <p class="card-text">Posted at: <%= review.createdAt.toLocaleString("en-IN") %>
              </p>
            </div>
          </div>
          <% } %>
      </div>
    </div>

  </body>