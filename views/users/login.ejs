<% layout("/layouts/boillerplate.ejs") %>

    <div class="container my-5 d-flex align-items-center justify-content-center px-2">
        <div class="w-100" style="max-width: 400px;">
            <div class="card shadow-sm border-0 p-4">
                <div class="card-body">
                    <div class="text-center mb-4">
                        <img src="/icons/icon.png" alt="Wanderlust Logo" style="width: 60px; height: 60px;"
                            class="mb-2">
                        <h2 class="card-title mb-1" style="font-size: 1.6rem;">Login to Wanderlust</h2>
                        <p class="text-muted mb-0" style="font-size: 1rem;">Welcome back! Please login to continue.</p>
                    </div>
                    <form action="/login" method="post" class="needs-validation" novalidate>
                        <div class="mb-3">
                            <label for="username" class="form-label">Username</label>
                            <input name="username" type="text" class="form-control form-control-lg" id="username"
                                required autocomplete="username" />
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please enter a valid Username</div>
                        </div>
                        <div class="mb-3">
                            <label for="password" class="form-label">Password</label>
                            <input name="password" type="password" class="form-control form-control-lg" id="password"
                                required autocomplete="current-password" />
                            <div class="valid-feedback">Looks good!</div>
                            <div class="invalid-feedback">Please enter a valid Password</div>
                        </div>
                        <button class="btn btn-danger btn-lg w-100 mb-2" type="submit">Login</button>
                        <div class="text-center mt-3">
                            <small>Don't have an account? <a href="/signup">Sign up</a></small>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <style>
        @media (max-width: 576px) {
            .card {
                padding: 1.5rem !important;
            }

            .card-title {
                font-size: 1.2rem !important;
            }

            .form-control-lg {
                font-size: 1rem !important;
                padding: 0.75rem 1rem !important;
            }
        }
    </style>